<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MultiContactPicker.Azure" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowActionBar">false</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/azureColorPrimary</item>
        <item name="colorPrimaryDark">@color/azureColorPrimaryDark</item>
        <item name="mcpToolbarTheme">@style/Toolbar.Azure</item>
        <item name="mcpListPopupWindowStyleTheme">@style/Popup.Azure</item>
    </style>

    <style name="Toolbar.Azure" parent="ThemeOverlay.AppCompat.Dark.ActionBar">

    </style>

    <style name="Popup.Azure" parent="Widget.AppCompat.Light.ListPopupWindow">

    </style>

    <style name="MyCustomPickerTheme" parent="MultiContactPicker.Azure">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="mcpToolbarTheme">@style/MyCustomToolbarTheme</item>
        <item name="mcpListPopupWindowStyleTheme">@style/MyCustomToolbarTheme</item>
    </style>

    <style name="MyCustomToolbarTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColorPrimary">@color/colorAccent</item>
        <item name="android:textColorSecondary">@color/colorAccent</item>
    </style>

</resources>
